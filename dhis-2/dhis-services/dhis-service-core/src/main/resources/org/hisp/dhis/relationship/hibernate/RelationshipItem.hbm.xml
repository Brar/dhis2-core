<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.hisp.dhis.relationship.RelationshipItem" table="relationshipitem">

        <cache usage="read-write" />

        <id name="id" column="relationshipitemid">
            <generator class="native" />
        </id>

        <many-to-one name="relationship" class="org.hisp.dhis.relationship.Relationship"
                     column="relationshipid"
                     foreign-key="fk_relationshipitem_relationshipid" />

        <many-to-one name="trackedEntityInstance" class="org.hisp.dhis.trackedentity.TrackedEntityInstance"
                     column="trackedentityinstanceid"
                     foreign-key="fk_relationshipitem_trackedentityinstanceid"/>

        <many-to-one name="programInstance" class="org.hisp.dhis.program.ProgramInstance"
                     column="programinstanceid"
                     foreign-key="fk_relationshipitem_programinstanceid"/>

        <many-to-one name="programStageInstance" class="org.hisp.dhis.program.ProgramStageInstance"
                     column="programstageinstanceid"
                     foreign-key="fk_relationshipitem_programstageinstanceid"/>

        <set name="entityTypeAttributes" table="relationshipitementitytypeattribute" inverse="true">
            <key column="relationshipitemid" foreign-key="fk_relationshipitem_typeattributeid"/>
            <many-to-many class="org.hisp.dhis.trackedentity.TrackedEntityTypeAttribute"
                  column="trackedentitytypeattributeid" foreign-key="fk_relationshipitem_entitytypeattributeid"/>
        </set>

        <set name="trackedEntityAttributes" table="relationshipitemtrackedentityattribute" inverse="true">
            <key column="relationshipitemid" foreign-key="fk_relationshipitem_attributeid"/>
            <many-to-many class="org.hisp.dhis.trackedentity.TrackedEntityAttribute"
                  column="trackedentityattributeid" foreign-key="fk_relationshipitem_entityattributeid"/>
        </set>

        <set name="dataElements" table="relationshipitemdataelement" inverse="true">
            <key column="relationshipitemid" foreign-key="fk_relationshipitem_deid" />
            <many-to-many class="org.hisp.dhis.dataelement.DataElement"
                  column="dataelementid" foreign-key="fk_relationshipitem_dataelementid"/>
        </set>
    </class>
</hibernate-mapping>
